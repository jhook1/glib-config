{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/gcc",//"/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				//"-Wall",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				//"${file}",
				//"'pkg-config", "--cflags", "--libs", "glib-2.0'"
				//"$(pkg-config --cflags --libs glib-2.0)"
				"$(pkg-config", "--cflags", "--libs", "glib-2.0)"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"//"compiler: /usr/bin/g++"
		}
	]
}